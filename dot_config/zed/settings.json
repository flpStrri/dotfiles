// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "debugger": {
    "dock": "left"
  },
  "features": {
    "edit_prediction_provider": "zed"
  },
  "agent": {
    "default_profile": "write",
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4"
    },
    "version": "2"
  },
  "edit_predictions": {
    "disabled_globs": [".env"]
  },

  "vim_mode": true,
  "vim": {
    "default_mode": "normal",
    "use_system_clipboard": "never",
    "toggle_relative_line_numbers": true,
    "cursor_shape": {
      "normal": "block",
      "visual": "block",
      "insert": "bar"
    }
  },

  "buffer_font_family": "JetBrains Mono",
  "buffer_font_size": 18,
  "show_whitespaces": "all",
  "cursor_blink": false,
  "base_keymap": null,
  "indent_guides": { "enabled": true },
  "inlay_hints": { "enabled": true },

  "theme": {
    "dark": "Catppuccin Mocha",
    "light": "Catppuccin Latte (Blue Blur+)"
  },
  "icon_theme": "Catppuccin Mocha",
  "ui_font_size": 16,

  "format_on_save": "on",
  "use_autoclose": true,
  "autosave": {
    "after_delay": {
      "milliseconds": 10000
    }
  },
  "restore_on_startup": "none",

  "scrollbar": { "show": "never" },
  "minimap": { "show": "never" },
  "tab_bar": { "show": false },
  "bottom_dock_layout": "full",
  "collaboration_panel": { "dock": "right" },
  "notification_panel": { "dock": "right" },
  "chat_panel": { "dock": "right" },
  "outline_panel": { "dock": "left" },
  "auto_update": false,

  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },

  "terminal": {
    "env": {
      "EDITOR": "zed --wait"
    },
    "detect_venv": { "on": { "activate_script": "fish" } }
  },

  "auto_install_extensions": {
    "catppuccin": true,
    "catppuccin-blur-plus": true,
    "catppuccin-icons": true,
    "ruff": true,
    "html": true,
    "dockerfile": true,
    "docker-compose": false
  },

  "languages": {
    "Python": {
      "language_servers": ["pyright", "ruff"],
      "format_on_save": "on",
      "formatter": [
        {
          "code_actions": {
            "source.organizeImports.ruff": true,
            "source.fixAll.ruff": true
          }
        },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    }
  },

  "calls": {
    "mute_on_join": true,
    "share_on_join": false
  },

  "journal": {
    "path": "~/Library/Mobile Documents/com~apple~CloudDocs/Personal Journal",
    "hour_format": "hour24"
  }
}
